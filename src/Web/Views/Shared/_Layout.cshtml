<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - Vehicle Auctions</title>

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link href="~/css/flag-icon.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Vehicle Auctions</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" is-active-route asp-controller="Home" asp-action="Index">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" is-active-route asp-controller="Lot" asp-action="Search">
                        <a class="nav-link" asp-controller="Lot" asp-action="Search">Search</a>
                    </li>
                    <li class="nav-item" is-active-route asp-controller="Home" asp-action="About">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    <li class="nav-item" is-active-route asp-controller="Home" asp-action="Contact">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                }
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </nav>

    <main class="container" role="main">
        @RenderBody()
        <hr />
    </main>

    <footer class="container">
        <p class="text-center">&copy; @DateTime.Today.Year - Vehicle Auctions</p>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
