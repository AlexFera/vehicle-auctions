@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link href="~/css/signin.css" rel="stylesheet" />
}

<form asp-controller="Account" asp-action="SignIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-signin">
    <h2 class="form-signin-heading">Please sign in</h2>
    <label asp-for="Email" class="sr-only"></label>
    <input asp-for="Email" class="form-control" placeholder="Email address" required autofocus />
    <span asp-validation-for="Email" class="text-danger"></span>

    <label asp-for="Password" class="sr-only"></label>
    <input asp-for="Password" class="form-control" placeholder="Password" required />
    <span asp-validation-for="Password" class="text-danger"></span>

    <div class="checkbox">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe" />
            @Html.DisplayNameFor(m => m.RememberMe)
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <p>
        <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text">Register as a new user?</a>
    </p>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}